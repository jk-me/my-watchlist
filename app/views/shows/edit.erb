<h2>Edit Show</h2>

<form method='post' action ='/shows/<%=@show.id%>'>
  <input id='hidden' type='hidden' name='_method' value='patch'>
  <p>Name: <input type='text' name='show[name]' value='<%=@show.name%>'></p>
  <p>Current Episode: <input type='text' name='show[year]' value='<%=@show.year%>'></p>

  <input type='submit' value='Submit'>
</form>

<form method='post' action ='/shows/<%=@show.id%>'>
  <input id='hidden' type='hidden' name='_method' value='delete'>
  <input type='submit' value='Delete From List'>
</form>
